@page
@using System.Data.SqlClient;
@{
    try
    {
        String searchtime = Request.Query["search_time"];
        Console.WriteLine(DateTime.Parse(searchtime));
        String connectionString = "Data Source=.\\SQLEXPRESS;Initial Catalog=dev-test;Integrated Security=True";
        using SqlConnection connection = new SqlConnection(connectionString);
        {
            connection.Open();
            String del = "DELETE FROM history WHERE search_time = @time";

            using (SqlCommand command = new SqlCommand(del, connection))
            {
                command.Parameters.AddWithValue("@time", DateTime.Parse(searchtime));
                command.ExecuteNonQuery();
            }
        }

    }
    catch (Exception ex)
    {
        return;
    }

    Response.Redirect("../Search History/history");
}
